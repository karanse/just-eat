<h1 class="pb-2">Search Restaurants in UK</h1>
<p class="pb-1">Your <strong>favourite restaurant</strong> is just one click away.</p>

<%= render 'search_form' %>

<h3 class="pt-5 text-center pb-4">Restaurants</h3>
<div class="d-flex justify-content-between align-items-start">
<%# restaurants list  %>
  <div class="list-card-container list-index">
      <% @restaurants.each do |restaurant| %>
      <%= render "shared/list-card", restaurant: restaurant %>
    <% end %>
  </div>
  <%# Map %>
  <div id="map" class="ms-5" style="width: 30%; height: 600px;"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
